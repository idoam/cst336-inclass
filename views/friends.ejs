<%- include("templates/header") -%>
    <h2>My Friend List</h2>
    <ul>
        <% friends.forEach(function(friend) { %>
            <li> <%= friend %> </li>
        <% }) %>
    </ul>
    
    <form action="/addfriend" method="POST">
        <input type="text" name="newfriend" placeholder="Add new friend name">
        <button class="btn btn-info">Add</button>
    </form>
    
    <form action="/removefriend" method="POST">
        <input type="text" name="newfriend" placeholder="Add old friend name">
        <button class="btn btn-info">Remove</button>
    </form>
    
<%- include("templates/footer") -%>